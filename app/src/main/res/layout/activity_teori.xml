<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.zakafikry.ewaris.TeoriActivity">

    <Button
        android:id="@+id/btnFamilyTree"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pohon Keluarga"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAhliWaris"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ahli Waris"
        android:layout_below="@+id/btnFamilyTree"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnDalil"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Dalil"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnAhliWaris"
        android:layout_alignLeft="@+id/btnAhliWaris"
        android:layout_alignStart="@+id/btnAhliWaris" />

    <Button
        android:id="@+id/btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAhliWaris"
        android:layout_alignRight="@+id/btnAhliWaris"
        android:layout_below="@+id/btnDalil"
        android:layout_marginTop="32dp"
        android:text="Button" />
</RelativeLayout>
