<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="4"
    tools:context="id.zakafikry.ewaris.IntroActivity.IntroActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="32dp">

        <Button
            android:id="@+id/btnFaraid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/hitung2" />

        <Button
            android:id="@+id/btnDalil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/btnFaraid"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/btnFaraid"
            android:background="@drawable/quran"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnAhliWaris"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnFaraid"
            android:layout_marginTop="128dp"
            android:background="@drawable/family" />

        <Button
            android:id="@+id/btnFamilyTree"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/btnAhliWaris"
            android:layout_alignLeft="@id/btnDalil"
            android:layout_alignStart="@id/btnDalil"
            android:background="@drawable/familytree2" />
    </RelativeLayout>

</RelativeLayout>
